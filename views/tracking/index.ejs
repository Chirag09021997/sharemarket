<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head', { title: title }) %>
    <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function () {
        $("#indexData").DataTable({
          pageLength: 25,
          lengthMenu: [10, 25, 50, 100],
          searching: true,
          ordering: true,
          order: [[1, 'asc']],
        });
      });
    </script>
</head>

<body>
  <%- include('../partials/navbar') %>
    <%- include('../partials/sidebar') %>
      <div class="sm:p-4 p-1 sm:ml-64 mt-6">
        <section class="p-3 sm:p-5">
          <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5">
            <div class="flex justify-between items-center">
              <h1 class="text-xl font-bold">List Tracking</h1>
            </div>
          </div>

          <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5 relative overflow-x-auto">
            <table id="indexData" class="display w-full text-sm text-gray-500">
              <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                  <th>#</th>
                  <th>Device Id</th>
                  <th>Promotion Type</th>
                  <th>Country Name</th>
                  <th>State Name</th>
                  <th>City Name</th>
                  <th>Total Open</th>
                </tr>
              </thead>
              <tbody>
                <% if (getData && getData.length> 0) { %>
                  <% getData.forEach((data, index)=> { %>
                    <tr key="<%= index %>">
                      <td class="text-center">
                        <%= index + 1 %>
                      </td>
                      <td class="text-center">
                        <%= data.device_id %>
                      </td>
                      <td class="text-center">
                        <%= data.promotion_type %>
                      </td>
                      <td class="text-center">
                        <%= data.country_name %>
                      </td>
                      <td class="text-center">
                        <%= data.state_name %>
                      </td>
                      <td class="text-center">
                        <%= data.city_name %>
                      </td>
                      <td class="text-center">
                        <%= data.total_open %>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="7" class="text-center">No data available</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
        </section>
      </div>
</body>

</html>